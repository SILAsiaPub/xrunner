      <div id=Results>&nbsp</div> -->

</div>
<div id="projectinfo" class="tabcontent">
 <form>
   <textarea name="InfoArea" rows="18" readonly  cols=88></textarea>
   <div class="floatright">
   <input type="BUTTON" value="Refresh from source" onclick="call reloadText(projectInfo)" class="halfbutton">
   <input type="BUTTON" value="Edit project-info.txt" onclick="call editFileExternal(projectInfo)" class="halfbutton">    
   </div>

  </form>

      <!-- iframe id="" src="setup/project-info.txt" width="715" height="700" frameborder="2"></iframe> --> 
</div>
<div id="Xrunnerinfo" class="tabcontent">
     <iframe src="setup/Xrunner.html" width="715" height="700" frameborder="2"></iframe>
</div>
<div id="Xrunfunc" class="tabcontent">
     <iframe src="docs/xrun-docs.md.html" width="715" height="700" frameborder="2"></iframe>
</div>
<div id="expert" class="tabcontent">

  <button onclick="editFileExternal(projectInfo)" name="LoadValues" id="LoadValues" class="inibutton">Edit Project-Info.txt</button>
  <button onclick="editFileExternal(projectTxt)" name="LoadValues" id="LoadValues" class="inibutton">Edit project.txt</button>
  <button onclick="editFileExternal('setup/xrun.css')" name="LoadValues" id="LoadValues" class="inibutton">Edit xrun.css</button>
  <button onclick="editFileExternal('setup/xrun.vbs')" name="LoadValues" id="LoadValues" class="inibutton">Edit xrun.vbs</button>
  <button onclick="editFileExternal('setup/xrun.js')" name="LoadValues" id="LoadValues" class="inibutton">Edit xrun.js</button>
  <button onclick="editFileExternal('setup/xrun.ini')" name="LoadValues" id="LoadValues" class="inibutton">Edit xrun.ini</button>
  <button onclick="editFileExternal('setup/xrunner.md')" name="LoadValues" id="LoadValues" class="inibutton">Edit Xrunner.md</button>
  <button onclick="editFileExternal('Xrunner.hta')" name="LoadValues" id="LoadValues" class="inibutton">Edit Xrunner.hta</button>
  <button onclick="editFileExternal('xrun.cmd')" name="LoadValues" id="LoadValues" class="inibutton">Edit xrun.cmd expert only!</button> 
  <button onclick="call RunCmd('setup/md2html.cmd', 'C:\ProgramData\xrun\xrunner.md')" class="inibutton" >Update Xrunner.html</button>
  <button onclick="call editFileWithProgram('scripts\variable2xslt-3.xslt', xmleditor)" name="LoadValues" id="LoadValues" class="inibutton">Edit variable2xslt-3.xslt</button>
  <button onclick="call editFileWithProgram('scripts\xrun.xslt', xmleditor)" name="LoadValues" id="LoadValues" class="inibutton">View xrun.xslt</button>

  <button onclick="call RunCmd2('start', '', ShowSelectedFolder.Value)" class="inibutton" >Open Project folder</button>
</div>
<div id="lastcmd"></div>
       </body>
</html>